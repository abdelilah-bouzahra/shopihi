generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model APICredentials {
  id        Int      @id @default(autoincrement())
  shop      String   @unique
  apiUrl    String
  apiId     String
  apiKey    String
  createdAt DateTime @default(now())
}
